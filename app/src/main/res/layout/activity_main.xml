<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


        <TextView
            android:id="@+id/txtDigitarValue1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digite um valor:" />

        <EditText
            android:id="@+id/editTextValor1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:hint="."
            android:inputType="text" />

        <TextView
            android:id="@+id/txtOutrovalor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digite outro valor:" />

        <EditText
            android:id="@+id/editTextValor2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:hint="."
            android:inputType="text" />

        <TextView
            android:id="@+id/SelecionarOp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Selecione a opção:" />

        <Button
            android:id="@+id/btnSomar"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:onClick="Somar"
            android:text="Somar" />

        <Button
            android:id="@+id/btnSubtrair"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="Subtrair"
            android:text="Subtrair" />

        <Button
            android:id="@+id/btnMultiplicar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:onClick="Multiplicar"
            android:text="Multiplicar" />

        <Button
            android:id="@+id/btnDividir"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:onClick="Dividir"
            android:text="Dividir" />

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado:" />

        <TextView
            android:id="@+id/txtPrintResult"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTela2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="telaDois"
            android:text="Proxima página" />


</LinearLayout>